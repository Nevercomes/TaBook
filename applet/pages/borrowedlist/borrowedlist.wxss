/* pages/borrowedlist/borrowedlist.wxss */
.container {
  background-color: #fff;
  min-height: 100%;
  display: block;
}
.short-container{
  width: 100%;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 24rpx;
  background-color: #F2f2f2;
}
.short-container .short-header{
  display: flex;
  align-items: center;
  justify-content: center;  
}
.short-container .short-header .text{
  width: 300rpx;
  font-size: 24rpx;
}
.short-box{
  width: 700rpx;
  height: 200rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  border-radius:5px;
  display: flex;
  flex-direction: row;
}
.short-box .img-box{
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.short-box .text-box{
  width: 500rpx;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.short-box .text-box .text-box1{
  width: 500rpx;
  height: 100rpx;
  overflow: hidden;
  display: flex;
  flex-direction: row;
}
.short-box .text-box .text-box1 .username{
  width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  font-size: 30rpx;
  padding: 24rpx 0 0rpx 0;
  color:#000;
  font-weight: bold;
  margin-left: 24rpx;
}
.short-box .text-box .text-box1  .time{
  width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 0rpx 0;
  color:#000;
  margin-left: 24rpx;
}
.short-box .text-box .text-box2 .comment{
  width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 0rpx 0;
  color:#000;
  margin-left: 24rpx;
}