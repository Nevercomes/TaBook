.desc3 {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-left: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.school {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

.name {
  width: 100%;
  font-size: 34rpx;
  padding-top: 20rpx;
  font-weight: bold;
}

.operation button {
  border-radius: 10rpx;
  color: blue;
  background-color: #fff;
  font-size: 34rpx;
  margin-top:60rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.revoke button{
   border-radius: 10rpx;
  color: blue;
  background-color: #fff;
  font-size: 34rpx;
  height: 60rpx;
  line-height: 60rpx;
}
button::after {
  border: none;
}
.type {
  margin-left: 95rpx;
  font-size: 34rpx;
  color: blue;
}
.time{
  position: absolute;
  float: right;
  right: 70rpx;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
}
