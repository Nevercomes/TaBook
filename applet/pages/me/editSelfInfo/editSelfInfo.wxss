/* pages/me/editSelfInfo/editSelfInfo.wxss */
.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #edeff4;
}
form{
  padding-top: 20rpx;
}
.avatar-box{
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}
.nickname ,.motto, .phone{
display: flex;
flex-direction: column;
background-color: #fff;
padding-bottom: 40rpx;
}
.nickname input,.motto input,.phone input{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  padding-left: 10rpx;
  margin-right: 40rpx;
}
.label{
  font-size: 30rpx;
  color: #999;
  margin-left: 80rpx;
  margin-bottom: 10rxp;
}
.img-box{
  display: flex;
  flex-direction: row;
}
.img-box image{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 18rpx;
}
.btn-box{
  width: 90%;
  margin-left: 5%;
  margin-top: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.btn-box button{
  background-color: lightgreen;
  color: #000;
  font-weight: bold;
}