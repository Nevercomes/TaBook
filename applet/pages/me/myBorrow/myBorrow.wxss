/* pages/me/myBorrow/myBorrow.wxss */
.content{
  width: 100%;
  height: 100%;
}
.hr{
  height: 1rpx;
  background-color: #ccc;
  opacity: 0.5;
}
.top {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-bottom: 15rpx;
}
.borrowstatistics {
  width: 33%;
  font-size: 34rpx;
  margin-left: 17%;
  font-weight: bold;
}
.swiper-tab{
  display: flex;
  flex-direction: row;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  justify-content:space-between;
}
.swiper-tab-item{
  margin-left: 10%;
  margin-right: 10%;
  width: 30%;
  font-size: 34rpx;
}
.active{
  color:#09bb07;
  border-bottom: 4rpx solid #09bb07
}
.swiper-item{
  height: 1000rpx;
  width: 100%;
}

.list{
   display: flex;
  flex-direction: column;
  font-family: "Microsoft YaHei";
}
.bookInfo{
  display: flex;
  flex-direction: column;
  width:100%;
  padding-top: 20rpx;
  font-size: 32rpx;
  line-height: 65rpx;
}
.name{
  font-weight: bold;
  width: 80%;
  margin-left: 20%;
  color: #000;
}
.desc{
  display: flex;
  flex-direction: row;
  width: 80%;
  margin-left: 20%;
  color: #333;
}
.desc button{
  margin-left:10%;
  font-size: 32rpx;
  width: 100%;
}
.desc button::after{
  border: none;
}
.other-button-hover{
  font-size: 34rpx;
  background-color: orange;
}
