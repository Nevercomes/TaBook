/* pages/me/myBorrow/myBorrow.wxss */

.content {
  width: 100%;
  height: 100%;
  background-color: #efeff4;
}

.hr {
  height: 1rpx;
  background-color: #ccc;
  opacity: 0.5;
}

.top {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-bottom: 5rpx;
  background-color: rgb(133, 133, 216);
  color: white;
  height: 88rpx;
  line-height: 88rpx;
}

.borrowstatistics {
  width: 33%;
  font-size: 34rpx;
  margin-left: 17%;
  font-weight: bold;
}

.detail {
  width: 90%;
  margin-left: 5%;
  border: 1rpx solid #ccc;
  box-shadow:6rpx, 6rpx, 6rpx, 6rpx, #ccc;
  background-color: #fff;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  justify-content: space-between;
}

.swiper-tab-item {
  margin-left: 10%;
  margin-right: 10%;
  width: 30%;
  font-size: 34rpx;
}

.active {
  color: #09bb07;
  border-bottom: 4rpx solid #09bb07;
}

.swiper-item {
  height: 1000rpx;
  width: 100%;
}

.list {
  display: flex;
  flex-direction: column;
  font-family: "Microsoft YaHei";

}

.bookInfo {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-top: 20rpx;
  font-size: 32rpx;
  line-height: 65rpx;
}

.name {
  font-weight: bold;
  width: 90%;
  margin-left: 10%;
  color: #000;
}

.desc {
  display: flex;
  flex-direction: row;
  width: 90%;
  margin-left: 10%;
  color: #333;
}

.operation {
  font-size: 34rpx;
  color: blue;
}

.xian {
  width: 80%;
  border-top: 5rpx;
  border-bottom: 1rpx solid #ccc;
  margin-left: 10%;

}
