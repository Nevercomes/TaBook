/* pages/me/myUpload/uploadBook/searchBook/searchBook.wxss */
.content {
  width: 100%;
  height: 100%;
}

.search {
  /* font-size: 34rpx; */
  margin-left: 5rpx;
  color: lightgreen;
}

.hot-search-box {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.hot-search {
  margin-top: 40rpx;
  margin-left: 60rpx;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.hot-search-book {
  display: flex;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.hot-search-book text {
  padding:15rpx;
  font-size: 32rpx;
  border-radius: 30rpx;
  color: #999;
  background-color: #efeff4;
}

.book-result-box{
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #efeff4;
}
.searchList{
  display: flex;
  flex-direction:row;
  width: 94%;
  height: 250rpx;
  margin-left: 3%;
  margin-bottom: 40rpx;
  background-color: #fff;
}
.img-box{
  margin: 20rpx;
}
.desc{
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
  padding-left: 50rpx;
}
.name{
  font-size: 36rpx;
  font-weight: bold;
}
.author,.press,.score{
  font-size: 32rpx;
  /* color: #999; */
}