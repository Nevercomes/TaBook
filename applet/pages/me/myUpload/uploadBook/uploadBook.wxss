@import "../changeBookImg/changeBookImg.wxss";
page{
  background-color:  #efeff4;
}
.tip{
  display: flex;
  background-color: #FFFFCC;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  justify-content: center;
}
.tip text{
  font-size: 28rpx;
}

.item{
  display: flex;
  flex-direction: row;
  width:100%;
  align-items: center;
  margin-bottom: 25rpx;
 
}
.item label{
  display: flex;
  width: 25%;
  font-size: 34rpx;
}
.item input{
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 34rpx;
  line-height:70px;
  background-color: #fff;
}
