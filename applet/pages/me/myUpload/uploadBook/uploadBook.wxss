/* pages/me/myUpload/uploadBook/uploadBook.wxss */
@import "../changeBookImg/changeBookImg.wxss";

page {
  background-color: #efeff4;
}

.tip {
  display: flex;
  background-color: #ffc;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  justify-content: center;
  margin-bottom: 20rpx;
}
.tip text {
  font-size: 28rpx;
}

.detail {
  width: 100%;
  margin: 0;
  /* margin-bottom: 20rpx; */
}

.item {
  display: flex;
  flex-direction: row;
  width: 94%;
  margin-left: 3%;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  /* border-bottom-width: 90%; */
  /* margin-bottom: 25rpx; */
}

.operation {
  display: flex;
  align-items: center;
  width: 94%;
  margin-left: 3%;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  height: 80rpx;
}
.item-score{
  display: flex;
  flex-direction: row;
  width: 94%;
  margin-left: 3%;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
  height: 80rpx;
  border-bottom-width: 90%;
}
.item label, .label,.score-title {
  position: absolute;
  float: left;
  margin-left: 40rpx;
  font-size: 34rpx;
}
.score-box{
  margin-left: 250rpx;
  display: flex;
  flex-direction: row;
}
.score{
  padding-left: 10rpx;
}

.radio-group {
  margin-left: 250rpx;
  font-size: 34rpx;
}

.item input {
  width: 100%;
  height: 80rpx;
  padding-left: 200rpx;
  border: 1rpx solid rgba(255, 255, 255, 0);
  font-size: 34rpx;
  line-height: 65px;
  background-color: #fff;
}
.score{
  display: flex;
  flex-direction: row;
}
