/* pages/me/userMotto/userMotto.wxss */
.motto-box{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.title{
  padding-left: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.input-box{
  width: 90%;
  height: 100%;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  margin-left: 5%;
}
.input-box input{
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 30rpx;
  height: 100rpx;
  line-height: 70rpx;
  padding-left: 10rpx;
}
.button-box{
  width: 90%;
  height: 100%;
  margin-left: 5%;
}
.button-box button{
  font-size: 36rpx;
  border-radius: 10rpx;
  background-color: rgb(22, 199, 22);
  color: white;
  height: 88rpx;
}