.schoolSelect{
  display: flex;
  flex-direction: row;
}
.schoolSelect input{
  border: 1rpx solid #ccc;
  margin: 8%;
  border-radius: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.schoolSelect button{
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  position: absolute;
  margin-top: 8%;
  right: 5%;
}
.a-z{
   width: 35rpx;
  position: fixed;
  top: 112rpx;
  text-align: center;
  right: 5rpx;
  color: #3399CC;
  font-size: 30rpx;
}
.school-item-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 110rpx;
  margin-left: 5%;
  background-color: #FFFFFF;
}
.school-item {
  background: #fff;
  /* margin-top: 5rpx; */
  width: 80%;  
  padding-left: 5%;
  margin-left: 5%;
  height: 90rpx;
  font-size: 45rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #CCCCCC;    
  /* border:1rpx solid red; */
}

.school-item-A-Z{
  width: 100%;
  height: 40rpx;
  font-size: 30rpx;
  padding-left: 10%;
