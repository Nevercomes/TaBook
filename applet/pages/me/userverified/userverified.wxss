.name{
  width: 20%;
  margin-left: 10%;
  
}
.item text{
  font-size: 36rpx;
  line-height: 100rpx;
}
.item input{
  width:95%;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  font-size: 36rpx;
  line-height:80rpx;
  height: 80rpx;
  padding-left: 40rpx;
  text-indent: 20rpx;
}
.btn{
  flex-direction: row;
  margin: 10%;
  
}
.btn button{
  background-color: #09BB07;
  border:1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 40rpx;
  margin-bottom: 20rpx; 
}
.detail{
  position: absolute;
  right: 10%;
  color: #ccc;
}


