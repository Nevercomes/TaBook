.container{
  width: 100%;
}
.tip-box{
  display: flex;
  border: 1px solid #ccc;
  background-color:#ffc;
  font-size: 30rpx;
  margin-top: 5%;
  height: 100rpx;
  align-items: center;
  width: 95%;
}
.verifiedcontent{
  display: flex;
  width:100%;
  margin-top: 10%;
  align-items: center;
}
form{
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.item{
 display: flex;
 flex-direction: row;
 width:100%;
 height: 100rpx;
 align-items: center;
}
/* .hr{
  border: 1rpx solid rgb(204, 204, 204);
