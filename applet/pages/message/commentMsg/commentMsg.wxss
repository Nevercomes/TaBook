.longCommentReplyList {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 465rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin-top: 30rpx;
}

.longcomentReplyContent {
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  height: 100rpx;
  line-height: 50rpx;
  width: 94%;
