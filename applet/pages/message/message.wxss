/* pages/message/message.wxss */
page{
  background-color: #efeff4;
}
.hr{
  border: 0.5rpx solid #ccc;
}
.message-box{
display: flex;
flex-direction: column;
margin-top: 20rpx;
}
.everyMsg{
display: flex;
flex-direction: row;
width: 100%;
height: 150rpx;
border-bottom: 1rpx solid #ccc;
background-color: #fff;
}
.img-box{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 35%;
}
.img-box image{
  
  width:100rpx;
  height: 100rpx;
}
.text-box{
display: flex;
  align-items: center;
  width: 65%;
  font-size: 36rpx;
  font-weight: bold;
}