/* pages/message/privateMsg/privateMsg.wxss */

page {
  background-color: #edeff4;
}

.content {
  border-top: 0.1rpx solid #ddd;
}

.privateMsg-box {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
  background-color: #fff;
}

.right {
  display: flex;
  flex-direction: column;
  height: 150rpx;
  border-bottom: 0.1rpx solid #ddd;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.userinfo-box {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-bottom: 5rpx;
  height: 60rpx;
}

.avatar-box {
  display: flex;
  width: 120rpx;
  margin-left: 20rpx;
  margin-top: 26rpx;
}

.nickname {
  size: 36rpx;
  font-weight: bold;
}

.time {
  position: absolute;
  float: right;
  right: 50rpx;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
}

.detail-box {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  width: 90%;
}

.detail {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all; /* 追加这一行代码 */
  font-size: 30rpx;
  color: #999;
  height: 40rpx;
  line-height: 40rpx;
}

.read_show {
  position: absolute;
  float: right;
  right: 20rpx;
  width: 15rpx;
  height: 15rpx;
  background-color: #f00;
  border-radius: 50%;
}

.read_hide {
  display: none;
  position: absolute;
  float: right;
  right: 20rpx;
  width: 15rpx;
  height: 15rpx;
  background-color: #f00;
  border-radius: 50%;
}
